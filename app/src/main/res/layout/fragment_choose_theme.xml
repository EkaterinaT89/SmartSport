<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/table_interesting_sport"
        android:layout_marginTop="@dimen/margin_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/football_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/choose_football"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="80dp"
                    android:contentDescription="@string/choose_football"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/football_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_select"
                    android:src="@drawable/football"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/football_not_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_not_select"
                    android:src="@drawable/football" />

                <TextView
                    android:id="@+id/football_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="@string/football_text"
                    android:textColor="?attr/textFillColor" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/badminton_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/badminton_not_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_not_select"
                    android:src="@drawable/badminton" />

                <ImageView
                    android:id="@+id/badminton_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_select"
                    android:src="@drawable/badminton"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/choose_badminton"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="80dp"
                    android:contentDescription="@string/choose_badminton"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/badminton_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="@string/badminton_text"
                    android:textColor="?attr/textFillColor" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/basketball_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/basketball_not_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_not_select"
                    android:src="@drawable/basketball" />

                <ImageView
                    android:id="@+id/basketball_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_select"
                    android:src="@drawable/basketball"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/choose_basketball"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="80dp"
                    android:contentDescription="@string/choose_basketball"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/basketball_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="@string/basketball_text"
                    android:textColor="?attr/textFillColor" />

            </FrameLayout>

        </TableRow>

        <TableRow
            android:id="@+id/second_column"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/cycling_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cycling_not_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_not_select"
                    android:src="@drawable/bike" />

                <ImageView
                    android:id="@+id/cycling_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_select"
                    android:src="@drawable/bike"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/choose_cycling"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="80dp"
                    android:contentDescription="@string/choose_cycling"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/cycling_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="@string/cycling_text"
                    android:textColor="?attr/textFillColor" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/tennis_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginTop="@dimen/margin_start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tennis_not_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_not_select"
                    android:src="@drawable/tennis" />

                <ImageView
                    android:id="@+id/tennis_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_select"
                    android:src="@drawable/tennis"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/choose_tennis"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="80dp"
                    android:contentDescription="@string/choose_tennis"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tennis_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="@string/tennis_text"
                    android:textColor="?attr/textFillColor" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/volleyball_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginTop="@dimen/margin_start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/volleyball_not_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_not_select"
                    android:src="@drawable/volleyball" />

                <ImageView
                    android:id="@+id/volleyball_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_select"
                    android:src="@drawable/volleyball"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/choose_volleyball"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="80dp"
                    android:contentDescription="@string/choose_volleyball"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/volleyball_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="@string/volleyball_text"
                    android:textColor="?attr/textFillColor" />

            </FrameLayout>

        </TableRow>

        <TableRow
            android:id="@+id/third_column"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/fighting_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fighting_not_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_not_select"
                    android:src="@drawable/fighting" />

                <ImageView
                    android:id="@+id/fighting_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_select"
                    android:src="@drawable/fighting"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/choose_fighting"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="80dp"
                    android:contentDescription="@string/choose_fighting"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/fighting_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="@string/fighting_text"
                    android:textColor="?attr/textFillColor" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/armrestling_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginTop="@dimen/margin_start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/armrestling_not_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_not_select"
                    android:src="@drawable/arm" />

                <ImageView
                    android:id="@+id/armrestling_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_select"
                    android:src="@drawable/arm"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/armrestling_choose_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="80dp"
                    android:contentDescription="@string/armrestling_choose"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/armrestling_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="@string/armrestling_text"
                    android:textColor="?attr/textFillColor" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/light_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginTop="@dimen/margin_start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/light_not_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_not_select"
                    android:src="@drawable/light" />

                <ImageView
                    android:id="@+id/light_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_select"
                    android:src="@drawable/light"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/light_choose_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="80dp"
                    android:contentDescription="@string/light_choose"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/light_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="@string/light_text"
                    android:textColor="?attr/textFillColor" />

            </FrameLayout>

        </TableRow>

        <TableRow
            android:id="@+id/thourth_column"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/darts_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/darts_not_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_not_select"
                    android:src="@drawable/darts" />

                <ImageView
                    android:id="@+id/darts_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_select"
                    android:src="@drawable/darts"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/darts_choose_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="80dp"
                    android:contentDescription="@string/darts_choose"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/darts_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="@string/darts_text"
                    android:textColor="?attr/textFillColor" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/gandball_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginTop="@dimen/margin_start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/gandball_not_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_not_select"
                    android:src="@drawable/gand" />

                <ImageView
                    android:id="@+id/gandball_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_select"
                    android:src="@drawable/gand"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/gandball_choose_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="80dp"
                    android:contentDescription="@string/gandball_choose"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/gandball_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="@string/gandball_text"
                    android:textColor="?attr/textFillColor" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/swimming_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginTop="@dimen/margin_start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/swim_not_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_not_select"
                    android:src="@drawable/swim" />

                <ImageView
                    android:id="@+id/swim_choose"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_select"
                    android:checkable="true"
                    android:src="@drawable/swim"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/swimming_choose"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="80dp"
                    android:contentDescription="@string/swimming_choose"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/swimming_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="@string/swimming_text"
                    android:textColor="?attr/textFillColor" />

            </FrameLayout>

        </TableRow>

    </TableLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_start"
        android:backgroundTint="@color/orange"
        android:text="@string/save"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="?attr/textFillColor"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/table_interesting_sport" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/later_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_start"
        android:text="@string/later"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="?attr/textFillColor"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/save_button" />

</androidx.constraintlayout.widget.ConstraintLayout>