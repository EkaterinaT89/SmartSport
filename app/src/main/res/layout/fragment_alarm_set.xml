<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/alarm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="150dp"
        android:text="@string/alarm_title"
        android:textColor="?attr/textFillColor"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_start"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/regalarm"
            android:backgroundTint="@color/white"
            android:layout_marginStart="38dp"
            android:layout_marginTop="30dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/registration_status"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_start"
            android:elevation="15sp"
            android:padding="16dp"
            android:text="@string/registration_status"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/teamalarm"
            android:backgroundTint="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/alarm_for_groups"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_start"
            android:elevation="15sp"
            android:padding="16dp"
            android:text="@string/alarm_for_groups"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clock"
            android:backgroundTint="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/alarm_start_activities"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_start"
            android:elevation="15sp"
            android:padding="16dp"
            android:text="@string/alarm_start_activities"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="@dimen/margin_start"
        android:backgroundTint="@color/blue_primary"
        android:text="@string/next_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white" />

</LinearLayout>